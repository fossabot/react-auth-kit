{
  "name": "react-auth-kit",
  "version": "2.12.7",
  "description": "Authentication Library for React, which makes Token based auth very easy",
  "engines": {
    "node": ">=16"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "npx lerna run build",
    "test": "npx lerna run test",
    "test:docs": "markdownlint './docs/**/*.md' --ignore node_modules -c .markdownlint.json"
  },
  "keywords": [
    "react",
    "auth",
    "authentication",
    "jwt",
    "jsonwebtoken",
    "token"
  ],
  "author": {
    "name": "Arkadip Bhattacharya",
    "email": "hi@arkadip.dev",
    "url": "https://www.arkadip.dev"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/react-auth-kit/react-auth-kit"
  },
  "bugs": {
    "url": "https://github.com/react-auth-kit/react-auth-kit/issues",
    "email": "hi@arkadip.dev"
  },
  "homepage": "https://authkit.arkadip.dev",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/react-auth-kit"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.24.1",
    "@babel/core": "7.24.4",
    "@babel/preset-env": "7.24.4",
    "@babel/preset-react": "7.24.1",
    "@babel/preset-typescript": "7.24.1",
    "@commitlint/cli": "19.2.1",
    "@commitlint/config-conventional": "19.1.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@typescript-eslint/eslint-plugin": "7.7.0",
    "@typescript-eslint/parser": "7.7.0",
    "eslint": "9.1.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-jest": "28.2.0",
    "eslint-plugin-react": "7.34.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "9.0.11",
    "lerna": "^8.0.0",
    "lint-staged": "15.2.2",
    "markdownlint-cli": "0.39.0",
    "mkdirp": "3.0.1",
    "npm-run-all2": "6.1.2",
    "rimraf": "5.0.5",
    "tslib": "2.6.2",
    "typedoc": "0.25.13",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "5.4.5"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,json,js}": "npm test"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
